<h1>PostHomeworks#index</h1>
<p>Find me in app/views/post_homeworks/index.html.erb</p>
<% @post_homeworks.each do |post_homework| %>
<% if @student.keyword.is_active == 1 && @student.school == post_homework.teacher.school %>
<p>
  <strong>日付:</strong>
  <%= post_homework.created_at.strftime("%Y/%m/%d") %>
</p>

<p>
  <strong>名前:</strong>
  <%= post_homework.name %>
</p>

<p>
  <strong>ファイル:</strong>
  <%= link_to 'download', download_path(post_homework.id), class: "btn btn-default" %>
</p>

<p>
  <strong>科目:</strong>
  <%= post_homework.subject %>
</p>

<p>
	<% if post_homework.submission.nil? %>
     <strong>提出しよう</strong>
     　　<%= link_to 'ていしゅつする', new_submission_path(post_homework.id), class: "btn btn-default" %>
     <% else %>
     <strong>確認する</strong>
        <%= link_to 'かくにん する', submission_path(post_homework.submission.id), class: "btn btn-default" %>
     <% end %>
</p>
<% end %>
<% end %>
