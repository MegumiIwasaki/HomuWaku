<div class="text-center login">
  <div class="list-group">
    <div class="list-group-item list-group-item-warning login-box">

      <%= image_tag "top_student.PNG", :size =>'70x70', class: "student-icon-box", alt: "student" %>
       <h3>ログインがめん</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <strong>かぞくのメールアドレス</strong><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <strong>パスワード</strong><br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "ログイン",class: "btn btn-warning" %>
  </div>
<% end %>

<%= render "students/shared/links" %>

    </div>
  </div>
</div>
