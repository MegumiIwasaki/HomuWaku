<h2>とうろく がめん</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "teachers/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, :placeholder =>"山田太郎" %>
  </div>

  <div class="field">
    <%= f.label :school %><br />
    <%= f.text_field :school, autofocus: true, :placeholder =>"あいうえお小学校" %>
  </div>

  <div class="field">
    <%= f.label :grade %><br />
    <%= f.text_field :grade, autofocus: true, :placeholder =>"３−２" %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder =>"kazoku@homuwaku.com" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "とうろく" %>
  </div>
<% end %>

<%= render "teachers/shared/links" %>
